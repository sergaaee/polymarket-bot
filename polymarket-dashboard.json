{
  "id": null,
  "uid": "polymarket-bot",
  "title": "Polymarket Bot â€“ Trading & Performance",
  "tags": [
    "polymarket",
    "trading",
    "bot",
    "prometheus"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "asset",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(pm_orders_total, asset)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "API Latency (p50 / p95 / p99)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 8
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(pm_request_latency_seconds_bucket[1m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(pm_request_latency_seconds_bucket[1m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(pm_request_latency_seconds_bucket[1m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Orders Total",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pm_orders_total{asset=~\"$asset\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Matched Orders Total",
      "gridPos": {
        "x": 6,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pm_orders_matched_total{asset=~\"$asset\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Cancelled Orders Total",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(orders_cancelled_total{asset=~\"$asset\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Partial Matches Total",
      "gridPos": {
        "x": 18,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(orders_partial_total{asset=~\"$asset\"})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Hedge Orders Total Flow",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 24,
        "h": 7
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(hedge_orders_total{asset=~\"$asset\"})",
          "legendFormat": "created"
        },
        {
          "expr": "sum(hedge_orders_matched_total{asset=~\"$asset\"})",
          "legendFormat": "matched"
        },
        {
          "expr": "sum(hedge_orders_partial_total{asset=~\"$asset\"})",
          "legendFormat": "partial"
        },
        {
          "expr": "sum(hedge_orders_cancelled_total{asset=~\"$asset\"})",
          "legendFormat": "cancelled"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Retries by operation",
      "gridPos": {
        "x": 0,
        "y": 19,
        "w": 24,
        "h": 6
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(retries_total[1m])) by (operation)",
          "legendFormat": "{{operation}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Win rate %",
      "gridPos": {
        "x": 0,
        "y": 32,
        "w": 12,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(pm_orders_matched_total{asset=~\"$asset\"}) / sum(hedge_orders_matched_total{asset=~\"$asset\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    {
      "type": "stat",
      "title": "Stop-Loss Triggers Total",
      "gridPos": {
        "x": 12,
        "y": 32,
        "w": 12,
        "h": 4
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pm_stop_loss_total{asset=~\"$asset\"})"
        }
      ]
    }
  ]
}
